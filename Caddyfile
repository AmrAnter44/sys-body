# Caddy Configuration for X Gym System

# النظام الرئيسي (Main System)
system.xgym.website {
    reverse_proxy localhost:4001

    encode gzip

    header {
        -Server
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    log {
        output file logs\system-access.log
        format json
    }
}

# بوابة العملاء (Client Portal)
client.xgym.website {
    reverse_proxy localhost:3002

    encode gzip

    header {
        -Server
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    header /icons/* Cache-Control "public, max-age=31536000, immutable"
    header /splash/* Cache-Control "public, max-age=31536000, immutable"

    log {
        output file logs\client-access.log
        format json
    }
}
