# Environment (development/production)
NODE_ENV=development

# Application Port
PORT=4001

# Public URL (change this to your domain in production)
# For development: http://localhost:4001
# For production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:4001

# Disable Next.js telemetry for faster startup
NEXT_TELEMETRY_DISABLED=1

# Security - IMPORTANT: Change these in production!
JWT_SECRET=your-secret-key-here-change-this-in-production
EMERGENCY_SIGNUP_SECRET=change-this-in-production

# Database
DATABASE_URL="file:./prisma/gym.db"

# Thread pool size for better I/O performance
UV_THREADPOOL_SIZE=8

# Memory settings
NODE_OPTIONS="--max-old-space-size=4096 --max-http-header-size=16384"

# GitHub Links Configuration
# يمكنك تغيير هذه الروابط لكل deployment مختلف
NEXT_PUBLIC_GITHUB_LICENSE_URL=https://raw.githubusercontent.com/AmrAnter44/systems-lock/main/xgym.json
NEXT_PUBLIC_GITHUB_REPO_URL=https://github.com/AmrAnter44/sys-Xgym
NEXT_PUBLIC_GITHUB_RELEASES_URL=https://github.com/AmrAnter44/sys-Xgym/releases

