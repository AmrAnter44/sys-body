{
  "name": "gym-management",
  "version": "1.0.5",
  "description": "gym system",
  "private": true,
  "main": "electron/main.js",
  "author": "Amr Anter",
  "scripts": {
    "dev": "next dev -p 4001 -H 0.0.0.0",
    "build": "prisma generate && next build && npm run postbuild",
    "postbuild": "node -e \"const fs = require('fs'); const path = require('path'); const src = path.join('.next', 'static'); const dest = path.join('.next', 'standalone', '.next', 'static'); if (fs.existsSync(src) && fs.existsSync('.next/standalone')) { fs.cpSync(src, dest, { recursive: true }); console.log('âœ… Static files copied to standalone'); }\"",
    "start": "next start -p 4001 -H 0.0.0.0",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:4001 && electron .\"",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win --x64"
  },
  "dependencies": {
    "@next/env": "^16.0.3",
    "@prisma/client": "^5.22.0",
    "@swc/helpers": "^0.5.17",
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "bwip-js": "^4.8.0",
    "client-only": "^0.0.1",
    "csv-parse": "^6.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.7.3",
    "exceljs": "^4.4.0",
    "html5-qrcode": "^2.3.8",
    "jsonwebtoken": "^9.0.2",
    "jsqr": "^1.4.0",
    "next": "^14.2.33",
    "node-hid": "^3.2.0",
    "postcss": "^8.5.6",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.5.1",
    "sharp": "^0.33.4",
    "styled-jsx": "^5.1.7",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gym.management",
    "productName": "Gym Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      "!.next/standalone/node_modules",
      ".next/static/**/*",
      "public/**/*",
      "prisma/**/*",
      "package.json"
    ],
    "asarUnpack": [
      ".next/standalone/**/*",
      "!.next/standalone/node_modules",
      "node_modules/uiohook-napi/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/node-hid/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone/node_modules",
        "to": "app.asar.unpacked/.next/standalone/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "prisma/prisma/gym.db",
        "to": "seed-database/gym.db"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "AmrAnter44",
      "repo": "sys-Xgym"
    }
  }
}
