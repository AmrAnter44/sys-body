{
  "name": "gym-management",
  "version": "1.0.0",
  "description": "xgym system",
  "private": true,
  "main": "electron/main.js",
  "author": "Amr Anter",
  "scripts": {
    "dev": "next dev -p 4001 -H 0.0.0.0",
    "build": "prisma generate && next build",
    "start": "next start -p 4001 -H 0.0.0.0",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "build": {
    "appId": "com.gym.management",
    "productName": "X Gym Management System",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "prisma/**/*",
      "package.json",
      "next.config.js",
      "node_modules/electron-is-dev/**/*",
      "node_modules/next/**/*",
      "node_modules/@next/**/*",
      "!node_modules/electron/**/*",
      "!dist/**/*",
      "!.next/cache/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app"
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      },
      {
        "from": "prisma",
        "to": "prisma"
      }
    ],
    "asar": {
      "smartUnpack": true
    },
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@prisma/**/*",
      "node_modules/.prisma/**/*",
      "prisma/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "X Gym System",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "X Gym",
      "uninstallDisplayName": "Gym Management System",
      "artifactName": "GymSystem-Setup-${version}.exe",
      "deleteAppDataOnUninstall": false,
      "language": "1025",
      "multiLanguageInstaller": false,
      "menuCategory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "@next/env": "^16.0.3",
    "@prisma/client": "^5.22.0",
    "@swc/helpers": "^0.5.17",
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "bwip-js": "^4.8.0",
    "client-only": "^0.0.1",
    "electron-is-dev": "^2.0.0",
    "exceljs": "^4.4.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.33",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "styled-jsx": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}
