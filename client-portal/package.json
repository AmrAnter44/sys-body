{
  "name": "xgym-client-portal",
  "version": "1.0.0",
  "description": "X Gym Member Portal - Secure client-facing PWA (Frontend Only)",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "npm run generate-pwa-assets && next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "generate-icons": "node generate-pwa-icons.js",
    "generate-splash": "node generate-splash-screens.js",
    "generate-pwa-assets": "npm run generate-icons && npm run generate-splash",
    "pwa-assets": "npm run generate-pwa-assets"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.33",
    "next-pwa": "^5.6.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "14.2.33",
    "postcss": "^8",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
